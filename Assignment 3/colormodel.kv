    TextInput:
        id: magenta
        size_hint: (0.07,1)
        multiline: False
        font_size: sp(16)
        padding_y: ( self.height - self.line_height ) / 2
        padding_x: sp(8)

    Label:
        text: "Y"
        color: (0,0,0,1)
        font_size: sp(14)
