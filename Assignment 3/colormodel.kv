<ColorWidget>:
    orientation: 'vertical'
    top: top_panel
    bot: bot_panel

    TopPanel:
        id: top_panel
        size_hint: (1,0.8)

    BotPanel
        id: bot_panel
        size_hint: (1,0.2)
